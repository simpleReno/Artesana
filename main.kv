#: include pos_app/adapters/ui/gui/kv_files/home_window.kv
#: include pos_app/adapters/ui/gui/kv_files/clock_window.kv
#: include pos_app/adapters/ui/gui/kv_files/inventory_window.kv
#: include pos_app/adapters/ui/gui/kv_files/reports_window.kv
#: include pos_app/adapters/ui/gui/kv_files/payroll_window.kv
#: include pos_app/adapters/ui/gui/kv_files/management_window.kv
#: include pos_app/adapters/ui/gui/kv_files/settings_window.kv
##############################################################################################
# DesktopApp
##############################################################################################
##############################################################################################
# NavigationLayout
##############################################################################################
MDNavigationLayout:
    orientation: 'vertical'
    spacing: dp(10)
    padding: dp(10)
    MDScreenManager:
        MDScreen:
            MDBoxLayout:
                orientation: 'vertical'
##############################################################################################
#(4) TopAppBar
##############################################################################################        
                MDTopAppBar:
                    id: top_app_bar
                    type: "small"
                    MDTopAppBarLeadingButtonContainer:
                        MDActionTopAppBarButton:
                            icon: "menu"
                            on_release: app.root.ids.nav_drawer.set_state()   
                    MDTopAppBarTitle:
                        id: title
                        text: "La Artesana"
                    MDTopAppBarTrailingButtonContainer:                 
                        MDActionTopAppBarButton:
                            icon: "account-circle-outline"
                            on_release: app.switch_theme_style() 
##############################################################################################
# Screen Manager
##############################################################################################
                MDScreenManager:
                    id: screen_manager
                    size_hint: 1, 1
                    HomeWindow:
                        id: home
                        name: "home"
                    ClockWindow:
                        id: clock
                        name: "clock"
                    InventoryWindow:
                        id: inventory
                        name: "inventory"
                    ReportsWindow:
                        id: reports
                        name: "reports"
                    PayrollWindow:
                        id: payroll
                        name: "payroll"
                    ManagementWindow:
                        id: manage
                        name: "manage"
                    SettingsWindow:
                        id: settings
                        name: "settings"
##############################################################################################
#(1) NavigationDrawer
##############################################################################################
    MDNavigationDrawer:
        id: nav_drawer
        md_bg_color: app.theme_cls.backgroundColor
        radius: 0, dp(16), dp(16), 0
        MDNavigationDrawerMenu:
            MDNavigationDrawerLabel:
                text: "Menu"
##############################################################################################
            NavigationDrawerItem:
                icon: "home"
                text: "Home"
            NavigationDrawerItem:
                icon: "clock"
                text: "Clock In/Out"
##############################################################################################
            MDNavigationDrawerDivider:
##############################################################################################
            NavigationDrawerItem:
                icon: "store"
                text: "Inventory"
            NavigationDrawerItem:
                icon: "bookshelf"
                text: "Reports"
            NavigationDrawerItem:
                icon: "calendar-account"
                text: "Payroll"
##############################################################################################
            MDNavigationDrawerDivider:
##############################################################################################
            NavigationDrawerItem:
                icon: "account-key"
                text: "Manage"
            NavigationDrawerItem:
                icon: "tools"
                text: "Settings"
##############################################################################################
            MDNavigationDrawerDivider: 
##############################################################################################
            NavigationDrawerItem:
                icon: "exit-to-app"
                text: "Exit"
                on_release: app.stop() 