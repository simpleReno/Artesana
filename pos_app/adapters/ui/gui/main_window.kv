<MainWindow>:
    on_enter: root.populate_tabs()
    canvas.before:
        Color:
            rgba: 0.2, 0.2, 0.2, 1  
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, .1 
            Button:
                text: "go back"
                size_hint: .2, None
                on_release: 
                    app.root.current = "login"
                    root.manager.transition.direction = "right"
            Label:
                text: "Artesana"
                color: 1, 93, 0, 1
                size_hint: .6, None
                
            Button:
                text: "logout"
                size_hint: .2, None
                on_release: 
                    app.root.current = "login"
      
        BoxLayout:
            orientation: "horizontal"
            BoxLayout:
                size_hint: .25, 1
                orientation: "vertical"
                ScrollView:
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1  
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    size_hint: 1, .8
                    do_scroll_x: False
                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: dp(5)
                        id: order_stack
                    
                GridLayout:
                    cols: 2
                    size_hint: 1, .2
                    Button:
                        size_hint: .5, None
                        text:"Edit"
                        on_press: root.check_to_cancel()
                            
                        
                    Button:
                        size_hint: .5, None
                        text:"Charge"
                        on_press: root.check_to_submit()

                    Button:
                        size_hint: .5, None
                        text:"Cancel"
                        on_press: root.check_to_cancel()
                            
                        
                    Button:
                        size_hint: .5, None
                        text:"Add"
                        on_press: root.check_to_submit()
            
            BoxLayout:
                orientation: "vertical"
                size_hint: .85, 1
                TabbedPanel:
                    id: tabbed_panel
                    do_default_tab: False