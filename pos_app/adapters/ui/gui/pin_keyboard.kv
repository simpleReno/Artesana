

<PinKeyboard>:
    BoxLayout:
        padding: dp(6)
        orientation: "vertical"
        id: grid
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  
            Rectangle:
                pos: self.pos
                size: self.size

        TextInput:
            id: text_output
            hint_text: "Pin"
            multiline: False
            halign: 'center'
            valign: 'middle'
            size_hint: 1, .25
            padding_y: [self.height / 2 - (self.line_height / 2), 0]
            font_size: self.width * 0.1 
            on_text: self.text = self.text.upper()
            on_parent: self.focus = True

        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                spacing: dp(5)
                padding: dp(2.5)
                Button:
                    text: "1"
                    on_press: root.on_button_click(self)

                Button:
                    text: "2"
                    on_press: root.on_button_click(self)

                Button:
                    text: "3"
                    on_press: root.on_button_click(self)
                Button:
                    text: "4"
                    on_press: root.on_button_click(self)
                
                Button:
                    text: "5"
                    on_press: root.on_button_click(self)
                    
                Button:
                    text: "6"
                    on_press: root.on_button_click(self)
                
                Button:
                    text: "7"
                    on_press: root.on_button_click(self)
                
                Button:
                    text: "8"
                    on_press: root.on_button_click(self)
                    
                Button:
                    text: "9"
                    on_press: root.on_button_click(self)

                Button:
                    text: "0"
                    on_press: root.on_button_click(self)

            BoxLayout:
                padding: dp(2.5)
                spacing: dp(5)
                Button:
                    text: "Q"
                    on_press:
                        root.on_button_click(self)
                Button:
                    text: "W"
                    on_press:
                        root.on_button_click(self)
                Button:
                    text: "E"
                    on_press:
                        root.on_button_click(self)
                Button:
                    text: "R"
                    on_press:
                        root.on_button_click(self)
                Button:
                    text: "T"
                    on_press:
                        root.on_button_click(self)
                Button:
                    text: "Y"
                    on_press:
                        root.on_button_click(self)
                Button:
                    text: "U"
                    on_press:
                        root.on_button_click(self)
                Button:
                    text: "I"
                    on_press:
                        root.on_button_click(self)
                Button:
                    text: "O"
                    on_press:
                        root.on_button_click(self)
                Button:
                    text: "P"
                    on_press:
                        root.on_button_click(self)

            BoxLayout:
                padding: dp(2.5)
                spacing: dp(5)
                size_hint: .9,1
                pos_hint: {'center_x':.5}
                Button:
                    text: "A"
            
                    on_press:
                        root.on_button_click(self)
                Button:
                    text: "S"
            
                    on_press:
                        root.on_button_click(self)
                Button:
                    text: "D"
            
                    on_press:
                        root.on_button_click(self)
                Button:
                    text: "F"
                    on_press:
                        root.on_button_click(self)
                Button:
                    text: "G"
                    on_press:
                        root.on_button_click(self)
                Button:
                    text: "H"
                    on_press:
                        root.on_button_click(self)
                Button:
                    text: "J"
                    on_press:
                        root.on_button_click(self)
                Button:
                    text: "K"
                    on_press:
                        root.on_button_click(self)
                Button:
                    text: "L"
                    on_press:
                        root.on_button_click(self)
            BoxLayout:
                padding: dp(2.5)
                spacing: dp(5)
                size_hint: 1, 1
                pos_hint: {'center_x':.5}
                Button:
                    text: "Clear All"
                    size_hint: 1.55, 1 
                    on_press: root.on_clear_all_button_click()
                Button:
                    text: "Z"
                    on_press: root.on_button_click(self)
                Button:
                    text: "X"
                    on_press: root.on_button_click(self)
                Button:
                    text: "C"
                    on_press: root.on_button_click(self)
                Button:
                    text: "V"
                    on_press: root.on_button_click(self)
                Button:
                    text: "B"
                    on_press: root.on_button_click(self)
                Button:
                    text: "N"
                    on_press: root.on_button_click(self)
                Button:
                    text: "M"
                    on_press: root.on_button_click(self)
                Button:
                    text: "Delete"
                    size_hint: 1.55, 1 
                    on_press: root.on_delete_button_click()
            BoxLayout:
                size_hint_y:.8
                padding: dp(2.5)
                spacing: dp(5)
                Button:
                    text: "Go back"
                    on_press: 
                        root.on_go_back_button_click()
                        root.manager.transition.direction = "right"
                Button:
                    text: "Enter"
                    on_press: root.check_pin()
    
                
        
