##############################################################################################
# Widgets
##############################################################################################
<NavigationRailItem>
    MDNavigationRailItemIcon:
        icon: root.icon
    MDNavigationRailItemLabel:
        text: root.text
<NavigationDrawerItem>
    MDNavigationDrawerItemLeadingIcon:
        icon: root.icon
    MDNavigationDrawerItemText:
        text: root.text
<ProductCard>
    padding: dp(10)
    size: dp(120), dp(120)
    MDRelativeLayout:
        MDIconButton:
            icon: root.icon
            pos_hint: {"top": 1, "right": 1}
        MDLabel:
            text: root.text
            adaptive_size: True
            color: "grey"
            pos: dp(12), dp(12)
            bold: True
<ListedItem>
    size_hint_x: None
    width: self.parent.width if self.parent else self.width
    MDListItemLeadingIcon:
        icon: root.icon
    MDListItemSupportingText:
        text: root.text
<TabContent>:
    id: tab_content
    key_viewclass: 'viewclass'
    MDRecycleGridLayout:
        id: grid
        cols: 3
        spacing: dp(10)
        padding: dp(10)
        default_size: dp(120), dp(120)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
<ItemListDisplay>
    id: list
    key_viewclass: 'viewclass'
    RecycleBoxLayout:
        orientation: 'vertical'
        spacing: dp(5)
        padding: dp(10)
        default_size: None, None
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
<DataTable>
    id: table
    key_viewclass: 'viewclass'
    RecycleGridLayout:
        cols: 3
        spacing: dp(10)
        padding: dp(10)
        default_size: None, dp(48)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
<HBButton>
    style: "tonal"
    MDButtonIcon:
        icon: root.icon
        theme_text_color: "Custom"
        text_color: app.theme_cls.primaryColor
    MDButtonText:
        text: root.text
<CheckItem>:
    adaptive_height: True
    MDCheckbox:
        active: root.active
        group: root.group
    
    MDLabel:
        text: root.text
        adaptive_size: True
        #pos_hint: {"center_y": .5}

<DecimalKeyboard>
    orientation: 'vertical'
    padding: dp(10)
    spacing: dp(10)
    MDTextField:
        id: text_field
        adaptive_size: True
        hint_text: "Enter Amount"
        mode: "outlined"
        size_hint: 1, None
        readonly: True
    MDGridLayout:
        id: keyboard_layout
        cols: 3
        spacing: dp(5)
        padding: dp(10)
        Button:
            text: "1"
            size_hint: 1, 1
            on_press: root.on_click(self)

        Button:
            text: "2"
            size_hint: 1, 1
            on_press: root.on_click(self)

        Button:
            text: "3"
            size_hint: 1, 1
            on_press: root.on_click(self)
        Button:
            text: "4"
            size_hint: 1, 1
            on_press: root.on_click(self)
            
        Button:
            text: "5"
            size_hint: 1, 1
            on_press: root.on_click(self)
            
        Button:
            text: "6"
            size_hint: 1, 1
            on_press: root.on_click(self)
            
        Button:
            text: "7"
            size_hint: 1, 1
            on_press: root.on_click(self)
            
        Button:
            text: "8"
            size_hint: 1, 1
            on_press: root.on_click(self)
            
        Button:
            text: "9"
            size_hint: 1, 1
            on_press: root.on_click(self)

        Button:
            text: "Delete"
            size_hint: 1, 1
            on_press: root.on_backspace()
            
        Button:
            text: "0"
            size_hint: 1, 1
            on_press: root.on_click(self)