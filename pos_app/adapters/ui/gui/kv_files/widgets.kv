##############################################################################################
# Widgets
##############################################################################################
<NavigationRailItem>
    MDNavigationRailItemIcon:
        icon: root.icon
    MDNavigationRailItemLabel:
        text: root.text
<NavigationDrawerItem>
    MDNavigationDrawerItemLeadingIcon:
        icon: root.icon
    MDNavigationDrawerItemText:
        text: root.text
<ProductCard>
    padding: dp(10)
    size: dp(120), dp(120)
    MDRelativeLayout:
        MDIconButton:
            icon: root.icon
            pos_hint: {"top": 1, "right": 1}
        MDLabel:
            text: root.text
            adaptive_size: True
            color: "grey"
            pos: dp(12), dp(12)
            bold: True
<ListedItem>
    size_hint_x: None
    width: self.parent.width if self.parent else self.width
    MDListItemLeadingIcon:
        icon: root.icon
    MDListItemSupportingText:
        text: root.text
<TabContent>:
    id: tab_content
    key_viewclass: 'viewclass'
    MDRecycleGridLayout:
        id: grid
        cols: 3
        spacing: dp(10)
        padding: dp(10)
        default_size: dp(120), dp(120)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
<ItemListDisplay>
    id: list
    key_viewclass: 'viewclass'
    RecycleBoxLayout:
        orientation: 'vertical'
        spacing: dp(5)
        padding: dp(10)
        default_size: None, None
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
<DataTable>
    id: table
    key_viewclass: 'viewclass'
    RecycleGridLayout:
        cols: 3
        spacing: dp(10)
        padding: dp(10)
        default_size: None, dp(48)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
<HBButton>
    style: "tonal"
    MDButtonIcon:
        icon: root.icon
        theme_text_color: "Custom"
        text_color: app.theme_cls.primaryColor
    MDButtonText:
        text: root.text
<CheckItem>:
    adaptive_height: True
    MDCheckbox:
        active: root.active
        group: root.group
    
    MDLabel:
        text: root.text
        adaptive_size: True
        #pos_hint: {"center_y": .5}

<ExpansionPanelItem>

    MDExpansionPanelHeader:

        MDListItem:
            theme_bg_color: "Custom"
            md_bg_color: self.theme_cls.surfaceContainerLowColor
            ripple_effect: False

            MDListItemSupportingText:
                text: root.text

            TrailingPressedIconButton:
                id: chevron
                icon: "chevron-right"
                #on_release: self.tap_expansion_chevron(root, chevron)

    MDExpansionPanelContent:
        orientation: "vertical"
        padding: "12dp", 0, "12dp", "12dp"
        md_bg_color: self.theme_cls.surfaceContainerLowestColor

        MDLabel:
            text: "Orders"
            adaptive_height: True
            padding_x: "16dp"
            padding_y: "12dp"

<ExpansionInternalItem@MDListItem>:
    theme_bg_color: "Custom"
    md_bg_color: self.theme_cls.surfaceContainerLowestColor

    MDListItemLeadingIcon:
        icon: root.icon

    MDListItemHeadlineText:
        text: root.text

    MDListItemSupportingText:
        text: root.supporting_text
