##############################################################################################
# Reports Window
##############################################################################################
<ReportsWindow>
    id: reports
    mg_bg_color: app.theme_cls.backgroundColor
##############################################################################################
#(1) Box Layout - NavigationRail
##############################################################################################        
    MDBoxLayout:
        orientation: 'horizontal'
##############################################################################################
#(2) Navigation Rail
##############################################################################################
        MDNavigationRail:
            id: nav_rail
            type: "labeled"
            md_bg_color: app.theme_cls.backgroundColor
            NavigationRailItem:
                icon: "clipboard-outline"
                text: "Total"
                screen: "total"
                on_touch_down: 
                    root.switch_navigation_rail(self.screen) if self.collide_point(*args[1].pos) else False
            NavigationRailItem:
                icon: "cube-outline"
                text: "Products"
                screen: "products"
                on_touch_down: 
                    root.switch_navigation_rail(self.screen) if self.collide_point(*args[1].pos) else False
            NavigationRailItem:
                icon: "handshake-outline"
                text: "Services"
                screen: "services"
                on_touch_down: 
                    root.switch_navigation_rail(self.screen) if self.collide_point(*args[1].pos) else False  
##############################################################################################
#(2) Screen Manager
##############################################################################################       
        MDScreenManager:
            id: screen_manager
            ScreenReports_Total:
                id: total
                name: "total"
            ScreenReports_Products:
                id: products
                name: "products"
            ScreenReports_Services:
                id: services
                name: "services"
