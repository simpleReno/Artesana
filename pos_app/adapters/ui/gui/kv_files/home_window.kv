#: include pos_app/adapters/ui/gui/kv_files/widgets.kv
##############################################################################################
# Home Window
##############################################################################################
<HomeWindow>
    id: home
    mg_bg_color: app.theme_cls.backgroundColor
##############################################################################################
#(1) Box Layout - NavigationRail
##############################################################################################        
    MDBoxLayout:
        orientation: 'horizontal'
##############################################################################################
#(2) Navigation Rail
##############################################################################################
        MDNavigationRail:
            id: nav_rail
            type: "labeled"
            md_bg_color: app.theme_cls.backgroundColor
            NavigationRailItem:
                icon: "beer"
                text: "Products"
                screen: "products"
                on_touch_down: 
                    app.switch_navigation_rail(self.screen) if self.collide_point(*args[1].pos) else False
            NavigationRailItem:
                icon: "table-chair"
                text: "Tables"
                screen: "tables"
                on_touch_down: 
                    app.switch_navigation_rail(self.screen) if self.collide_point(*args[1].pos) else False  
            NavigationRailItem:
                icon: "cart"
                text: "Orders"
                screen: "orders"
                on_touch_down: 
                    app.switch_navigation_rail(self.screen) if self.collide_point(*args[1].pos) else False
            NavigationRailItem:
                icon: "history"
                text: "Charge"
                screen: "charge"
                on_touch_down: 
                    app.switch_navigation_rail(self.screen) if self.collide_point(*args[1].pos) else False
##############################################################################################
#(2) Third Box Layout - Content
##############################################################################################
        MDBoxLayout:
            orientation: 'vertical'
            md_bg_color: app.theme_cls.backgroundColor
            padding: dp(10)
##############################################################################################
#(3) Text Field
##############################################################################################
            MDBoxLayout:
                orientation: 'horizontal'
                size_hint: 1, None
                md_bg_color: app.theme_cls.backgroundColor
                MDTextField:
                    size_hint: 0.6, None
                    mode: "outlined"
                    MDTextFieldLeadingIcon:
                        icon: "magnify"
                    MDTextFieldHintText:
                        text: "Search"
                    MDTextFieldTrailingIcon:
                        icon: "information"
##############################################################################################
#(4) Utility Icons
##############################################################################################
                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint: 0.4, None
                    spacing: dp(10)
                    MDLabel:
                        text: ""
                    MDIconButton:
                        icon: "bell"
                        theme_text_color: "Primary"
                    MDLabel:
                        text: ""
                    MDIconButton:
                        icon: "cart"
                        theme_text_color: "Primary"
                    MDLabel:
                        text: ""
##############################################################################################
#(3) Inner Screen Manager
##############################################################################################
            MDScreenManager:
                id: screen_manager_home
                ScreenProducts:
                    id: products
                    name: "products"
                ScreenTables:
                    id: tables
                    name: "tables"
                ScreenOrders:
                    id: orders
                    name: "orders"
                ScreenCharge:
                    id: charge
                    name: "charge"
##############################################################################################
# Product Screen - NavigationRail
##############################################################################################
<ScreenProducts>
    MDBoxLayout:
        orientation: 'horizontal'
##############################################################################################
#(2) Recycle View - Product View
#############################################################################################
        MDTabsPrimary:
            id: tabs
            pos_hint: {"top": 1}
            allow_scroll: False
            size_hint_x: 0.6
            MDDivider:
                orientation: "horizontal"
            MDTabsCarousel:
                id: related_content
                size_hint_y: None
                height: root.height - dp(100)
                width: root.width
        MDDivider:
            orientation: "vertical"
        ItemListDisplay:
            size_hint_x: 0.4
            id: list
##############################################################################################
# Tables Screen - NavigationRail
##############################################################################################
<ScreenTables>
    MDBoxLayout:
        orientation: 'horizontal'
        MDTabsPrimary:
            id: tabs
            size_hint_x: 0.6
            pos_hint: {"top": 1}
            allow_scroll: False
            MDDivider:
                orientation: "horizontal"
            MDTabsCarousel:
                id: related_content
                size_hint_y: None
                height: root.height - dp(100)
                width: root.width
        MDDivider:
            orientation: "vertical"
        ItemListDisplay:
            size_hint_x: 0.4
            id: list
##############################################################################################
# Orders Screen - NavigationRail
##############################################################################################
<ScreenOrders>
    MDBoxLayout:
        orientation: 'vertical'
        MDLabel:
            text: "Orders"
            halign: "center" 
            theme_text_color: "Primary"
        MDLabel:
            text: "Welcome to Orders Screen"
            halign: "center"
            theme_text_color: "Primary"
##############################################################################################
# Charge Screen - NavigationRail
##############################################################################################
<ScreenCharge>
    MDBoxLayout:
        orientation: 'vertical'
        MDLabel:
            text: "Charge"
            halign: "center"
            theme_text_color: "Primary"
        MDLabel:
            text: "Welcome to Charge Screen"
            halign: "center"
            theme_text_color: "Primary"
##############################################################################################
