#: include pos_app/adapters/ui/gui/kv_files/widgets.kv
##############################################################################################
# Inventor Window
##############################################################################################
<InventoryWindow>
    id: inventory
    mg_bg_color: app.theme_cls.backgroundColor
##############################################################################################
#(1) Box Layout - NavigationRail
##############################################################################################
    MDBoxLayout:
        orientation: 'horizontal'
##############################################################################################
#(2) Navigation Rail
##############################################################################################
        MDNavigationRail:
            id: nav_rail
            type: "labeled"
            mb_bg_color: app.theme_cls.backgroundColor
            NavigationRailItem:
                icon: "plus"
                text: "Product"
                screen: "product"
                on_touch_down: 
                    root.switch_navigation_rail(self.screen) if self.collide_point(*args[1].pos) else False
            NavigationRailItem:
                icon: "plus"
                text: " Categories"
                screen: "category"
                on_touch_down: 
                    root.switch_navigation_rail(self.screen) if self.collide_point(*args[1].pos) else False
            NavigationRailItem:
                icon: "plus"
                text: "Services"
                screen: "service"
                on_touch_down: 
                    root.switch_navigation_rail(self.screen) if self.collide_point(*args[1].pos) else False
##############################################################################################
#(2) Screen Manager
##############################################################################################       
        MDScreenManager:
            id: screen_manager
            ScreenProduct:
                id: product
                name: "product"
            ScreenCategory:
                id: category
                name: "category"
            ScreenService:
                id: service
                name: "service"
##############################################################################################
# Screens - Inventory
##############################################################################################
##############################################################################################
# Screen Product
##############################################################################################
<ScreenProduct>
    MDBoxLayout:
        orientation: 'horizontal'
        md_bg_color: app.theme_cls.backgroundColor
        MDAnchorLayout:
            anchor_x: 'left'
            anchor_y: 'top'
            padding: dp(10)
            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height: True
                #pos_hint: {"right": 0.1, "top": 0.1}
                #pos_hint: {"x": 0.05, "y": 0.3}
                padding_y: dp(30)
                spacing: dp(20)
                size_hint: 0.95, None
                md_bg_color: app.theme_cls.backgroundColor
                MDTextField:
                    mode: "outlined"
                    MDTextFieldHintText:
                        text: "Name"
                    MDTextFieldTrailingIcon:
                        icon: "information"
                MDTextField:
                    mode: "outlined"
                    MDTextFieldHintText:
                        text: "Amount"
                    MDTextFieldTrailingIcon:
                        icon: "information"
                MDTextField:
                    mode: "outlined"
                    MDTextFieldHintText:
                        text: "Price"
                    MDTextFieldTrailingIcon:
                        icon: "information"
                MDTextField:
                    mode: "filled"
                    multiline: True
                    max_height: dp(100)
                    MDTextFieldHintText:
                        text: "Description"
                    MDTextFieldTrailingIcon:
                        icon: "information"
                MDTextField:
                    id: drop_text
                    size_hint: 0.6, None
                    mode: "outlined"
                    on_focus: root.open_menu()
                    MDTextFieldHintText:
                        text: "Category"
                    MDTextFieldTrailingIcon:
                        icon: "arrow-down"
                MDBoxLayout:
                    radius: [25, 25, 25, 25]
                    md_bg_color: app.theme_cls.backgroundColor
                    orientation: 'horizontal'
                    adaptive_height: True
                    spacing: dp(10)
                    MDButton:
                        style: "filled"
                        MDButtonText:
                            text: "Save"
                            #on_press: app.save_product()
                    MDButton:
                        style: "filled"
                        MDButtonText:
                            text: "Cancel"
                            #on_press: app.cancel_product()
        MDDivider:
            height: dp(200)
            orientation: 'vertical'
        MDBoxLayout: 
            orientation: 'vertical'
            padding: dp(10)
            spacing: dp(10)
            md_bg_color: app.theme_cls.backgroundColor
            MDTextField:
                id: search
                hint_text: "Search"
                mode: "outlined"
            DataTable:
                id: data_table
                check: True
                rows_num: 10
            MDBoxLayout:
                orientation: 'horizontal'
                spacing: dp(10)
                MDButton:
                    style: "elevated"
                    MDButtonText:
                        text: "Edit"
                    #on_press: app.edit_product()
                MDButton:
                    style: "elevated"
                    MDButtonText:
                        text: "Delete"
                    #on_press: app.delete_product()
##############################################################################################
# Screen Category
##############################################################################################
<ScreenCategory>
    MDBoxLayout:
        orientation: 'horizontal'
        md_bg_color: app.theme_cls.backgroundColor
        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(10)
            MDBoxLayout:
                orientation: 'vertical'
                height: self.minimum_height
                padding_y: dp(10)
                spacing: dp(10)
                size_hint: 1, None
                md_bg_color: app.theme_cls.backgroundColor
                MDTextField:
                    mode: "outlined"
                    MDTextFieldHintText:
                        text: "Add Category"
                    MDTextFieldTrailingIcon:
                        icon: "information"
                MDBoxLayout:
                    orientation: 'horizontal'
                    adaptive_height: True
                    MDButton:
                        style: "filled"
                        on_release: root.add_subcategory()
                        MDButtonText:
                            text: "Add Subcategory"
                    MDBoxLayout:
                        orientation: 'horizontal'
                        adaptive_height: True
                        CheckItem:
                            active: True
                            text: "Product"
                            group: "category"
                        CheckItem:
                            active: False
                            text: "Service"
                            group: "category"  
            MDBoxLayout:
                orientation: 'vertical'
                padding: dp(10)
                spacing: dp(10)
                
                md_bg_color: app.theme_cls.backgroundColor
                ItemListDisplay:
                    id: list
            MDBoxLayout:
                orientation: 'horizontal'
                spacing: dp(10)
                adaptive_height: True
                MDButton:
                    style: "elevated"
                    MDButtonText:
                        text: "Save"
                    #on_press: app.edit_category()
                MDButton:
                    style: "elevated"
                    MDButtonText:
                        text: "Cancel"
                    #on_press: app.delete_category()
        MDDivider:
            height: dp(200)
            orientation: 'vertical'
        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(10)
            spacing: dp(10)
            md_bg_color: app.theme_cls.backgroundColor
            MDTextField:
                id: search
                hint_text: "Search"
                mode: "outlined"
            DataTable:
                id: data_table
                check: True
                rows_num: 10
            MDBoxLayout:
                orientation: 'horizontal'
                spacing: dp(10)
                adaptive_size: True
                MDButton:
                    style: "elevated"
                    MDButtonText:
                        text: "Edit"
                    #on_press: app.edit_category()
                MDButton:
                    style: "elevated"
                    MDButtonText:
                        text: "Delete"
                    #on_press: app.delete_category()
               
